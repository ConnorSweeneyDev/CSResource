include("${CMAKE_CURRENT_SOURCE_DIR}/cmake/Meta.cmake")

set(CMAKE_CXX_STANDARD_REQUIRED ON CACHE BOOL "")
set(CMAKE_CXX_STANDARD "20" CACHE STRING "")
set(CMAKE_MSVC_RUNTIME_LIBRARY "MultiThreaded$<$<CONFIG:Debug>:Debug>" CACHE STRING "")
set(FORCE_STATIC_VCRT ON CACHE BOOL "")
set(BUILD_SHARED_LIBS OFF CACHE BOOL "")
set(COMPILER_FLAGS "/W4" "/MP")
set(LINKER_FLAGS "/INCREMENTAL:NO")

set(PROGRAM_DIRECTORY "program")
set(PROGRAM_INCLUDE_DIRECTORY "${PROGRAM_DIRECTORY}/include")
set(PROGRAM_SOURCE_DIRECTORY "${PROGRAM_DIRECTORY}/source")
set(INCLUDE_DIRECTORIES "${CMAKE_CURRENT_SOURCE_DIR}/${PROGRAM_INCLUDE_DIRECTORY}")
file(GLOB_RECURSE HEADER_FILES "${CMAKE_CURRENT_SOURCE_DIR}/${PROGRAM_INCLUDE_DIRECTORY}/*.*")
file(GLOB_RECURSE SOURCE_FILES "${CMAKE_CURRENT_SOURCE_DIR}/${PROGRAM_SOURCE_DIRECTORY}/*.*")
source_group("Header Files" FILES "${HEADER_FILES}")
source_group("Source Files" FILES "${SOURCE_FILES}")
